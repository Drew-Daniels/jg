{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/Drew-Daniels/jg/schema.json",
  "title": "JGit",
  "description": "JGit configuration schema",
  "type": "object",
  "properties": {
    "jira": {
      "type": "object",
      "properties": {
        "issuePrefix": {
          "type": "string",
          "description": "Jira issue prefix"
        }
      },
      "required": [
        "issuePrefix"
      ]
    },
    "github": {
      "type": "object",
      "properties": {
        "organization": {
          "type": "string",
          "description": "Github organization"
        }
      },
      "required": [
        "organization"
      ]
    }
  },
  "required": [
    "jira",
    "github"
  ]
}
